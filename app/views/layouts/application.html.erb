<!DOCTYPE html>
<html>
  <head>
    <title>Chiweeniequiz1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

      <nav class="navbar navbar-light bg-light navlink">
      <a class="navbar-brand" href="#">The Life of a Chiweenie</a>
      </nav>

      <header class="container">
          <div class="col-lg-10 text-center title-link">
            <!-- Button trigger modal -->
              <%= link_to "What Should Rubi Do Today?", '#', data: {toggle: 'modal', target: '#myModal'} %>
          </div>
      </header>

   
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">Ã—</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Activities for Rubi</h4>
          </div>
          <%= simple_form_for Suggestion.new do |f| %>
          <div class="modal-body">  
              <%= f.input :activity %>
              <%= f.input :description %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
           <%= f.submit 'Create', class: 'btn btn-danger' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>

      <br class="clear" />

      <div class="container">
        <% if flash[:error].present? %>
        <div class="col-10 offset-1 alert alert-danger">
          <%= flash[:error].html_safe %>
          <% end %>

         <%= yield %>
      </div>


  </body>
</html>
